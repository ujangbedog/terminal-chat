# P2P Chat Application Configuration
# Copy this file to .env and modify as needed

# Default host to bind to
# Use 0.0.0.0 to accept connections from any network interface
# Use 127.0.0.1 to only accept local connections
DEFAULT_HOST=127.0.0.1

# Default port to listen on
# Set to 0 for random port assignment
# Only bootstrap nodes should use specific ports
DEFAULT_PORT=8080

# TLS Configuration
# Always enabled for security, but you can configure cert paths here
TLS_ENABLED=true

# Multicast discovery address for peer discovery
MULTICAST_ADDR=224.0.0.1:9999

# Connection timeout in seconds
CONNECTION_TIMEOUT=30

# Heartbeat interval in seconds
HEARTBEAT_INTERVAL=60

# Maximum number of peer connections
MAX_CONNECTIONS=50

# Log level (error, warn, info, debug, trace)
LOG_LEVEL=error
